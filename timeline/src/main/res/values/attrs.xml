<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimelineView">

        <!-- LINE ATTRS -->

        <attr name="timeline_lineWidth" format="dimension" />
        <attr name="timeline_lineColor" format="color" />

        <attr name="timeline_lineStyle" format="enum">
            <enum name="linear" value="-1" />
            <enum name="dashed" value="0" />
        </attr>

        <!-- POINT ATTRS -->

        <attr name="timeline_pointStyle" format="enum">
            <enum name="circle" value="-1" />
            <enum name="square" value="0" />
            <enum name="none" value="1" />
        </attr>

        <attr name="timeline_pointBorderColor" format="color" />
        <attr name="timeline_pointFillColor" format="color" />

        <attr name="timeline_pointFillSize" format="dimension" />
        <attr name="timeline_pointStrokeSize" format="dimension" />

        <!-- POSITION ATTRS -->

        <attr name="timeline_pointPosition">
            <flag name="center" value="1" />
            <flag name="center_vertical" value="2" />
            <flag name="center_horizontal" value="4" />
            <flag name="top" value="8" />
            <flag name="bottom" value="16" />
            <flag name="start" value="32" />
            <flag name="end" value="64" />
        </attr>

        <!-- OTHER ATTRS -->


        <attr name="timeline_drawInternal" format="boolean" />

        <attr name="timeline_internalPadding" format="dimension" />

    </declare-styleable>
</resources>
