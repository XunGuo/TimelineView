<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimelineView">

        <!-- LINE ATTRS -->

        <attr name="timeline_lineWidth" format="dimension" />
        <attr name="timeline_lineColor" format="color" />

        <attr name="timeline_lineStyle" format="enum">
            <enum name="linear" value="-1" />
            <enum name="dashed" value="0" />
        </attr>

        <attr name="timeline_lineVerticalPosition" format="enum">
            <enum name="full" value="-1" />
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>

        <attr name="timeline_lineHorizontalPosition" format="enum">
            <enum name="center" value="-1" />
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>

        <attr name="timeline_alignment" format="enum">
            <enum name="start" value="-1" />
            <enum name="middle" value="0" />
            <enum name="end" value="1" />
        </attr>

        <!-- OTHER ATTRS -->

        <attr name="timeline_indicatorSize" format="dimension" />
        <attr name="timeline_indicatorColor" format="color" />

        <attr name="timeline_pointStyle" format="enum">
            <enum name="circle" value="-1" />
            <enum name="square" value="0" />
        </attr>

        <attr name="timeline_drawInternal" format="boolean" />
        <attr name="timeline_internalColor" format="color" />
        <attr name="timeline_internalDrawable" format="reference" />
        <attr name="timeline_internalPadding" format="dimension" />

    </declare-styleable>
</resources>
