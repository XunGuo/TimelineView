<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="64dp">

    <com.alorma.timeline.TimelineView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:timeline_lineVerticalPosition="start"
        app:timeline_pointBorderColor="?colorPrimary"
        app:timeline_pointFillColor="?android:windowBackground"
        app:timeline_pointFillSize="32dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.alorma.timeline.TimelineView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:timeline_pointBorderColor="?colorPrimary"
        app:timeline_pointFillColor="?colorPrimary"
        app:timeline_pointFillSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.alorma.timeline.TimelineView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:timeline_lineVerticalPosition="end"
        app:timeline_pointBorderColor="?colorPrimary"
        app:timeline_pointFillColor="?android:windowBackground"
        app:timeline_pointFillSize="24dp" />

</LinearLayout>
